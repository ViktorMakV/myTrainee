<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>

<!--  Add servlet-->
  <servlet>
    <servlet-name>addBook</servlet-name>
    <servlet-class>com.servlet.AddBookServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>addBook</servlet-name>
    <url-pattern>/addBook</url-pattern>
  </servlet-mapping>

<!--  List authors servlet-->
  <servlet>
    <servlet-name>listAuthors</servlet-name>
    <servlet-class>com.servlet.ListAuthorsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>listAuthors</servlet-name>
    <url-pattern>/listAuthors</url-pattern>
  </servlet-mapping>

<!--  List books servlet-->
  <servlet>
    <servlet-name>listBooks</servlet-name>
    <servlet-class>com.servlet.ListBooksServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>listBooks</servlet-name>
    <url-pattern>/listBooks</url-pattern>
  </servlet-mapping>

  <!--  Delete author servlet-->
  <servlet>
    <servlet-name>deleteAuthor</servlet-name>
    <servlet-class>com.servlet.DeleteAuthorServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>deleteAuthor</servlet-name>
    <url-pattern>/deleteAuthor</url-pattern>
  </servlet-mapping>

  <!--  Update author servlet-->
  <servlet>
    <servlet-name>updateAuthor</servlet-name>
    <servlet-class>com.servlet.UpdateAuthorServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>updateAuthor</servlet-name>
    <url-pattern>/updateAuthor</url-pattern>
  </servlet-mapping>
</web-app>
